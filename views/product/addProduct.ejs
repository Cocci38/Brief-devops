<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <header>
        <%- include('../administration/headerAdmin') %>
    </header>
    <main>
        <div class="container form-container" style="margin-bottom: 20px;margin-top: 10px;">
            <h2 class="text-center">Ajouter un produit</h2>
            <form action="/create-product" method="POST">
                <div class="mb-3">
                    <label for="productName" class="form-label">Nom du produit</label>
                    <input type="text" class="form-control" id="productName" name="productName">
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Prix du produit</label>
                    <input type="number" class="form-control" id="productPrice" name="productPrice">
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Catégorie du produit</label>

                    <select class="form-select" name="ownedByCategory" aria-label="ownedByCategory">
                        <option selected>Choix de la catégorie</option>
                        <% categories.forEach(function(categorie) { %>
                            <option value="<%= categorie._id %>">
                                <%= categorie.categoryName %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="productDescription" class="form-label">Description du produit</label>
                    <textarea class="form-control" id="productDescription" name="productDescription"
                        rows="7"></textarea>
                </div>
                <div class="d-flex gap-2 d-md-block">
                    <button type="submit" class="btn btnSubmit" style="width: 49%;">Valider</button>
                    <a href="/admin/dashboard" class="btn btnSubmit" style="width: 50%;">Annuler</a>
                </div>
            </form>
        </div>
    </main>
    <footer>
        <%- include('../administration/footerAdmin'); -%>
    </footer>
</body>

</html>