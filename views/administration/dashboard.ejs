<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/main.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <header>
        <%- include('headerAdmin'); -%>
    </header>
    <main class="container-md container-fluid">
        <a href="/create-product" class="btn"><i class="bi bi-plus-lg"> Ajouter un produit</i></a>
        <div class="table-responsive-xxl">
            <table class="table table-succes table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th scope="col">Nom du produit</th>
                        <th scope="col">Prix du produit</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product=> { %>
                        <tr>
                            <td>
                                <%= product.productName %>
                            </td>
                            <td>
                                <%= product.productPrice %>â‚¬
                            </td>
                            <td class="d-flex gap-2 d-md-block">
                                <a href="/produit/<%= product._id %>" class="btn">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/update-product/<%= product._id %>" class="btn">
                                    <i class="bi bi-pencil-square"></i>
                                </a> 
                                <a href="/delete-product/<%= product._id %>" class="btn">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <footer>
        <%- include('footerAdmin'); -%>
    </footer>
</body>

</html>